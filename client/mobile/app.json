{
  "expo": {
    "name": "Ursine Arcana",
    "slug": "ursine-arcana",
    "version": "0.1.0",
    "orientation": "portrait",
    "icon": "./assets/images/ursus_arcana_logo_main.png",
    "scheme": "ursinearcana",
    "userInterfaceStyle": "dark",
    "splash": {
      "image": "./assets/images/ursus_arcana_logo_main.png",
      "resizeMode": "contain",
      "backgroundColor": "#111827"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.ursinearcana.app",
      "googleServicesFile": "./GoogleService-Info.plist",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Ursine Arcana uses your location to show you nearby users.",
        "NSLocationAlwaysUsageDescription": "Ursine Arcana uses your location to show you nearby users even when the app is in the background.",
        "NSPhotoLibraryUsageDescription": "Ursine Arcana needs access to your photos to let you upload profile pictures.",
        "NSCameraUsageDescription": "Ursine Arcana needs access to your camera to let you take profile pictures.",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/ursus_arcana_logo_main.png",
        "backgroundColor": "#111827"
      },
      "package": "com.ursinearcana.app",
      "googleServicesFile": "./google-services.json",
      "permissions": [
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.RECORD_AUDIO"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      "@react-native-firebase/app",
      "@react-native-firebase/auth",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow Ursine Arcana to use your location to show nearby users."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow Ursine Arcana to access your photos for profile pictures.",
          "cameraPermission": "Allow Ursine Arcana to access your camera for profile pictures."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/images/ursus_arcana_logo_main.png",
          "color": "#8B5CF6"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "21ebc4c6-af28-4212-9a0f-c0585bd02342"
      }
    }
  }
}
