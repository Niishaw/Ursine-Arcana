{
  "name": "ursine-arcana",
  "version": "0.1.0",
  "private": true,
  "description": "Ursine Arcana - A mobile social app for the furry, pup-play, and fetish communities",
  "workspaces": [
    "packages/*",
    "client/*",
    "server/functions"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "build:shared": "npm run build -w @ursine-arcana/shared",
    "build:functions": "npm run build -w @ursine-arcana/functions",
    "dev:mobile": "npm run start -w @ursine-arcana/mobile",
    "dev:admin": "npm run dev -w @ursine-arcana/admin",
    "lint": "npm run lint --workspaces --if-present",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present",
    "firebase:emulators": "firebase emulators:start",
    "firebase:deploy": "firebase deploy",
    "firebase:deploy:functions": "firebase deploy --only functions",
    "firebase:deploy:rules": "firebase deploy --only firestore:rules,storage"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.18.0",
    "@typescript-eslint/parser": "^6.18.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^3.2.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "overrides": {
    "react": "19.1.0",
    "react-dom": "19.1.0"
  }
}
